<Window x:Class="EdiViews.FindReplace.FindReplaceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        xmlns:view="clr-namespace:EdiViews.FindReplace"
        xmlns:behav="clr-namespace:EdiViews.Behaviour"

        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        d:DesignHeight="250" d:DesignWidth="300"             

        Title="Find And Replace"
        Height="Auto" Width="300"
        ResizeMode="NoResize"
        SizeToContent="Height"

        ShowInTaskbar="False"
        Topmost="False"
        FocusManager.IsFocusScope="True"

        WindowStartupLocation="CenterOwner"

        behav:DialogCloser.DialogResult="{Binding OpenCloseView.WindowCloseResult}"
        behav:RemoveIcon.Remove="true"

        KeyDown="Window_KeyDown"
        ><!-- WindowStyle="ToolWindow" -->
    <view:FindReplaceView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
</Window>
