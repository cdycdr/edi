<UserControl x:Class="MiniUML.Plugins.UmlClassDiagram.Resources.Shapes.UmlCommentShape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:MiniUML.View.Controls;assembly=MiniUML.View">
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!--
        These styles are necessary if you want Uml documents that are ignorant of the surrounding theming.
        The explicit styling ensures that Uml documents are displayed correctly even if the surrounding theming
        is white on black instead of black on white.
        -->
        <ResourceDictionary Source="/MiniUML.Plugins.UmlClassDiagram;component/Resources/UmlTextBox.xaml"  />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>

    <controls:SingleClickBlock MinWidth="16" Margin="2">
        <TextBox BorderThickness="0"
                 Background="Transparent"
                 Foreground="Black"
                 IsTabStop="False"
                 Style="{StaticResource UmlTextBox}"
                 Text="{Binding Path=Attribute[Text].Value}"/>
    </controls:SingleClickBlock>
    
</UserControl>
