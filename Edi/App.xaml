<Application x:Class="Edi.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="Application_Startup"
             >
<!-- StartupUri="MainWindow.xaml" -->
  <!-- This might be useful for working with the designer-, but not loading XAML
       resources here improves the application start-up time substantially.

       Therfore, use XAML resources for debugging ONLY.
  -->
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Themes;component/Aero/Theme.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>    
  </Application.Resources>
</Application>
